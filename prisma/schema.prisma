// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  discordId String @unique
  username  String @unique
  perks     Perk[]
}

model Perk {
  id          Int      @id @default(autoincrement())
  apiId       String   @unique
  name        String
  description String?
  tunables    Json?
  modifier    String   @unique
  users       User[]
  shrines     Shrine[]
}

model Shrine {
  id       Int      @id @default(autoincrement())
  apiId    Int      @unique
  perks    Perk[]
  start    DateTime
  end      DateTime
  reminded Boolean?
}
